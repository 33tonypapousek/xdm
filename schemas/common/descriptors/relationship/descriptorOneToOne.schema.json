  "$id": "https://ns.adobe.com/xdm/common/descriptors/descriptorOneToOne",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "One to One Relationship Descriptor",
  "meta:extensible": false,
  "meta:extends": [
    "https://ns.adobe.com/xdm/common/desciptors/schemadescriptor#/definitions/descriptor",
    "https://ns.adobe.com/xdm/common/descriptors/relationshipdescriptor#/definitions/relationshipdescriptor"
  ],
  "meta:abstract": false,
  "type": "object",
  "description": "Describes one to one relationship descriptor.",
  "definitions": {
    "descriptorOneToOne": {
      "properties":{
        "@type": {
          "type": "string",
          "const": "https://ns.adobe.com/xdm/common/descriptors/descriptorOneToOne"
        }
      },
      "required": [
        "xdm:destinationSchema",
        "xdm:sourceSchema"
      ]
    }
  },
  "allOf": [
    {
      "$ref": "https://ns.adobe.com/xdm/common/desciptors/schemadescriptor#/definitions/descriptor"
    },
    {
      "$ref": "https://ns.adobe.com/xdm/common/descriptors/relationshipdescriptor#/definitions/relationshipdescriptor"
    },
    {
      "$ref": "#/definitions/descriptorOneToOne"
    },
    {
      "oneOf": [
        {
          "properties": {
            "xdm:label": {
              "type": "string"
            }
          },
          "required":["xdm:label"]
        },
        {
          "properties": {
            "xdm:sourceProperty": {
              "title": "Source Property",
              "type": "string",
              "description": "When present, the property of the source schema to which this descriptor applies. This value is a JSON Pointer, applied to an instance of an object described by `xdm:sourceSchema`."
            }
          },
          "required":["xdm:sourceProperty"]
        }
      ]
    }
  ],
  "meta:status": "experimental"
}

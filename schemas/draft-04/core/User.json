{
  "id": "core/User.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "User",
  "type": "object",
  "description": "A user in the organization.",
  "properties": {
    "username": {
      "type": "string",
      "description": "The idenfier used by the user when logon.\n"
    },
    "fullName": {
      "type": "string",
      "description": "Name displayed by the user interface to represent the user.\n"
    },
    "authentication": {
      "type": "string",
      "description": "The authentication method used by the user to login.\n",
      "default": "ims",
      "enum": [
        "ims",
        "other"
      ]
    },
    "audit": {
      "$ref": "../core/AuditTrail.json"
    }
  },
  "required": [
    "username",
    "fullName"
  ]
}
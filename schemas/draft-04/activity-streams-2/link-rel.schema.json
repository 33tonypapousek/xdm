{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "regular-rel-type": {
            "type": "string",
            "pattern": "^[a-z]([a-z]|[0-9]|\\.|-)*$"
        },
        "link-rel": {
            "anyOf": [
                {
                    "$ref": "uri.schema.json"
                },
                {
                    "$ref": "#/definitions/regular-rel-type"
                }
            ]
        },
        "single-value": {
            "type": "object",
            "properties": {
                "rel": {
                    "$ref": "#/definitions/link-rel"
                }
            }
        },
        "multiple-values": {
            "type": "object",
            "properties": {
                "rel": {
                    "items": {
                        "$ref": "#/definitions/link-rel"
                    },
                    "type": "array"
                }
            }
        }
    },
    "type": "object",
    "oneOf": [
        {
            "$ref": "#/definitions/single-value"
        },
        {
            "$ref": "#/definitions/multiple-values"
        }
    ]
}
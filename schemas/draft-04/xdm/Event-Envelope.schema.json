{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "xdm/Event-Envelope.json",
    "defintions": {
        "extra-properties": {
            "properties": {
                "object-type": {
                    "description": "This is the type of the object present in the event-envelope. The value of this field MUST be exactly same as the value of the \"type\" field under the \"object\" field",
                    "$ref": "../activity-streams-2/type.schema.json"
                },
                "route": {
                    "description": "The cross data center routing context for the message.",
                    "type": "object",
                    "properties": {
                        "imsOrg": {
                            "type": "string",
                            "description": "The IMS Org ID."
                        },
                        "source": {
                            "type": "string",
                            "description": "The SKMS data center that the message orginated from."
                        },
                        "destinations": {
                            "type": [
                                "string",
                                "array"
                            ],
                            "items": {
                                "type": "string"
                            },
                            "description": "A list of data centers to route the message to."
                        }
                    }
                }
            }
        }
    },
    "type": "object",
    "allOf": [
        {
            "$ref": "../activity-streams-2/activity.schema.json"
        },
        {
            "$ref": "#/defintions/extra-properties"
        },
        {
            "required": [
                "id",
                "type",
                "published",
                "object-type",
                "object"
            ]
        }
    ]
}
  "$id": "https://ns.adobe.com/xdm/context/profile-privacy",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Profile Privacy",
  "description": "Accepts Privacy Opt Out signals for Selling/Sharing of data or general opt outs by Users",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:intendedToExtend": ["https://ns.adobe.com/xdm/context/profile"],
  "definitions": {
	"profile-privacy": {
		"xdm:optOutConsentLevel": {
			"type": "object",
			"title": "Opt out consent level",
			"description": "Opt out consent level",
			"properties": {
				"xdm:privacyOptOuts": {
					"title": "Privacy Opt Outs",
					"description": "Encapsulates different optout types for Data Privacy",
					"type": "array",
					"items": {
					"$ref": "#/definitions/optout"
					}
				}
			}
		}    
	},
    "optout": {
		"type": "object",
		"properties": {
			"xdm:optoutType": {
				"title": "Optout Type",
				"type": "string",
				"description": "Type of optout",
				"enum": [
                        "generalOptout",
                        "salesSharingOptout"
                ],
				"meta:enum": {
					"generalOptout": "General Opt-Out",
					"salesSharingOptout": "Sales Sharing Opt-Out"
				}
			},
			"xdm:optoutValue": {
				"title": "Optout value",
				"type": "string",
				"enum": ["not_provided", "pending", "in", "out"],
				"meta:enum": {
                  "not_provided": "User opt out signal not provided",
                  "pending": "Pending Verification",
                  "in": "Opt-In: the user opted in.",
                  "out": "Opt-Out: the user opted out."
               }
			},
			"xdm:timestamp": {
				"title": "Opt-Out Date Time.",
				"description": "Date and Time, when the opt-out signal was recieved.",
				"type": "string",
				"format": "date-time"
			}
		   }
       }
    },
	"allOf": [
		{
		  "$ref": "https://ns.adobe.com/xdm/common/extensible#/definitions/@context"
		},
		{
		  "$ref": "#/definitions/profile-privacy"
		}
	],
	"meta:status": "experimental"
}

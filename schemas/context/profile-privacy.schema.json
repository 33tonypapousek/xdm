  "$id": "https://ns.adobe.com/xdm/context/profile-privacy",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Profile Privacy",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "title": "Privacy",
  "meta:intendedToExtend": ["https://ns.adobe.com/xdm/context/profile"],
  "description": "Optout Mixin",
  "definitions": {
	"profile-privacy": {
		"type": "object",
			"properties": {
				"xdm:optouts": {
					"title": "Opt Outs",
					"description": "Encapsulates different optout types",
					"type": "array",
					"items": {
					"$ref": "#/definitions/optout"
					}
				}
			}
    },
    "optout": {
		"type": "object",
		"properties": {
			"xdm:optoutType": {
				"title": "Optout Type",
				"type": "string",
				"description": "Type of optout",
				"meta:enum": {
					"generalOptout": "generalOptout",
					"ccpaSalesSharingOptout": "ccpaSalesSharingOptout"
				}
			},
			"xdm:optoutValue": {
				"title": "Optout value true or false",
				"type": "string",
				"meta:enum": {
				"true": "true",
				"false": "false"
				}
			},
			"xdm:timestamp": {
				"title": "Opt-Out Date Time.",
				"description": "Date and Time, when the opt-out signal was recieved.",
				"type": "string",
				"format": "date-time"
								
			}
		   },
			"required": ["optoutType", "optoutValue"]
       }
    },
	"allOf": [
		{
		  "$ref": "https://ns.adobe.com/xdm/common/extensible#/definitions/@context"
		},
		{
		  "$ref": "#/definitions/profile-privacy"
		}
	],
	"meta:status": "experimental"
}
 

 

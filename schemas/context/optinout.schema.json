  "$id": "https://ns.adobe.com/xdm/context/optinout",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "OptInOut",
  "type": "object",
  "description":
    "Describes a users' communication preferences by channel. For each channel individually, which is a property of this object, a user's preference (opt-in, opt-out, pending) can be recorded. In addition, a global override opt-out is possible. Each property of this schema must be a valid and known URI for an XDM Channel.",
  "definitions": {
    "optinout": {
      "meta:keys": {
        "https://ns.adobe.com/xdm/channels/adm": "ADM",
        "https://ns.adobe.com/xdm/channels/apns": "APNS",
        "https://ns.adobe.com/xdm/channels/application": "Application",
        "https://ns.adobe.com/xdm/channels/baidu": "Baidu",
        "https://ns.adobe.com/xdm/channels/channel": "Experience Channel",
        "https://ns.adobe.com/xdm/channels/direct-mail": "Direct Mail",
        "https://ns.adobe.com/xdm/channels/email": "E-Mail",
        "https://ns.adobe.com/xdm/channels/facebook-feed": "Facebook News Feed",
        "https://ns.adobe.com/xdm/channels/fax": "Fax",
        "https://ns.adobe.com/xdm/channels/gcm": "GCM",
        "https://ns.adobe.com/xdm/channels/line": "LINE",
        "https://ns.adobe.com/xdm/channels/mobile-app": "Web",
        "https://ns.adobe.com/xdm/channels/mpns": "MPNS",
        "https://ns.adobe.com/xdm/channels/phone": "Phone",
        "https://ns.adobe.com/xdm/channels/sms": "SMS",
        "https://ns.adobe.com/xdm/channels/twitter-feed": "Twitter Feed",
        "https://ns.adobe.com/xdm/channels/web": "Web",
        "https://ns.adobe.com/xdm/channels/webpage": "Web Page",
        "https://ns.adobe.com/xdm/channels/wechat": "WeChat",
        "https://ns.adobe.com/xdm/channels/wns": "WNS"
      },
      "patternProperties": {
        ".+://.+": {
          "description":
            "Communication preference for the outbound channel identified through its URL by the name of the property.",
          "type": "string",
          "default": "not_provided",
          "enum": ["not_provided", "pending", "in", "out"],
          "meta:enum": {
            "not_provided": "Not Provided",
            "pending": "Pending Verification",
            "in": "Opt-In: the user explicitly consents to receiving messages.",
            "out":
              "Opt-Out: the user declines to receive any messages on this channel"
          }
        }
      },
      "properties": {
        "https://ns.adobe.com/xdm/channels/email": {
          "title": "Opting Email",
          "type": "string",
          "description": "Preference for email communication.",
          "default": "notProvided",
          "meta:enum": {
            "notProvided": "Not Provided",
            "pendingConfirmation": "Pending Verification",
            "in": "In",
            "out": "Out"
          }
        },
        "https://ns.adobe.com/xdm/channels/phone": {
          "title": "Opting Phone",
          "type": "string",
          "description": "Preference for phone voice communication.",
          "default": "notProvided",
          "meta:enum": {
            "notProvided": "Not Provided",
            "pendingConfirmation": "Pending Verification",
            "in": "In",
            "out": "Out"
          }
        },
        "https://ns.adobe.com/xdm/channels/text-messaging": {
          "title": "Opting Text Messaging",
          "type": "string",
          "description": "Preference for instant text communication.",
          "default": "notProvided",
          "meta:enum": {
            "notProvided": "Not Provided",
            "pendingConfirmation": "Pending Verification",
            "in": "In",
            "out": "Out"
          }
        },
        "https://ns.adobe.com/xdm/channels/fax": {
          "title": "Opting Fax",
          "type": "string",
          "description": "Preference for fax communication.",
          "default": "notProvided",
          "meta:enum": {
            "notProvided": "Not Provided",
            "pendingConfirmation": "Pending Verification",
            "in": "In",
            "out": "Out"
          }
        },
        "https://ns.adobe.com/xdm/channels/address": {
          "title": "Opting Address",
          "type": "string",
          "description": "Preference for mail address communication.",
          "default": "notProvided",
          "meta:enum": {
            "notProvided": "Not Provided",
            "pendingConfirmation": "Pending Verification",
            "in": "In",
            "out": "Out"
          }
        },
        "https://ns.adobe.com/xdm/channels/push-notification": {
          "title": "Opting Push Notification",
          "type": "string",
          "description": "Preference for push notification.",
          "default": "notProvided",
          "meta:enum": {
            "notProvided": "Not Provided",
            "pendingConfirmation": "Pending Verification",
            "in": "In",
            "out": "Out"
          }
        },
        "xdm:globalOptout": {
          "title": "Global Opt-out",
          "type": "boolean",
          "description": "Do not contact this profile on any outbound channel.",
          "default": false
        }
      },
      "additionalProperties": false
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/optinout"
    }
  ]
}

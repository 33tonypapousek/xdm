    "id": "https://ns.adobe.com/xdm/context/person.schema.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Person",
    "type": "object",
    "description": "An individual person.  May represent a person acting in various roles, such as a customer, contact, or owner.",
    "definitions" : {
        "person" : {
            "properties": {
                "name": {
                    "title": "Full name",
                    "$ref": "./personname.schema.json",
                    "description": "The person's full name"
                },
               "birthDay": {
                    "title": "Birth day",
                    "type": "integer",
                    "description": "The day of the month a person was born (1-31).",
                    "minimum": 1,
                    "maximum": 31
                },
                "birthMonth": {
                    "title": "Birth month",
                    "type": "integer",
                    "description": "The month of the year a person was born (1-12).",
                    "minimum": 1,
                    "maximum": 12
                },
                "birthYear": {
                    "title": "Birth year",
                    "type": "integer",
                    "description": "The year a person was born including the century (yyyy, e.g 1983).",
                    "minimum": 1,
                    "maximum" : 32767
                },
                "gender": {
                    "title": "Gender",
                    "type": "string",
                    "enum": [ "male", "female", "notSpecified", "nonSpecific" ],
                    "meta:enum": {
                        "male" : "Male",
                        "female" : "Female",
                        "notSpecified" : "Not Specified",
                        "nonSpecific" : "Nonspecific"
                    },
                    "description": "Gender identity of the person.\n",
                    "default": "notSpecified"
                }
            }
        }
    },
    "allOf" : [
        {"ref$" : "#/definitions/person"}
    ]
}
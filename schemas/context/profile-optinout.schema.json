  "$id": "https://ns.adobe.com/xdm/context/profile-optinout",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Profile Opt In/Out Signals",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:intendedToExtend": ["https://ns.adobe.com/xdm/context/profile"],
  "description": "Profile Optout Mixin",
  "definitions": {
	"profile-optinout": {
		"type": "object",
			"properties": {
				"xdm:privacyOptouts": {
					"title": "Privacy Opt Outs",
					"description": "Encapsulates different optout types for Data Privacy",
					"type": "array",
					"items": {
					"$ref": "#/definitions/optout"
					}
				},
				"xdm:channelOptouts": {
					"title": "Channel Opt Outs",
					"$ref": "https://ns.adobe.com/xdm/context/optinout"
				}
			}
    },
    "optout": {
		"type": "object",
		"properties": {
			"xdm:optoutType": {
				"title": "Optout Type",
				"type": "string",
				"description": "Type of optout",
				"enum": [
                        "generalOptout",
                        "salesSharingOptout"
                ],
				"meta:enum": {
					"generalOptout": "General Opt-Out",
					"salesSharingOptout": "Sales Sharing Opt-Out"
				}
			},
			"xdm:optoutValue": {
				"title": "Optout value true or false",
				"type": "boolean"
			},
			"xdm:timestamp": {
				"title": "Opt-Out Date Time.",
				"description": "Date and Time, when the opt-out signal was recieved.",
				"type": "string",
				"format": "date-time"
								
			}
		   },
			"required": ["optoutType", "optoutValue"]
       }
    },
	"allOf": [
		{
		  "$ref": "https://ns.adobe.com/xdm/common/extensible#/definitions/@context"
		},
		{
		  "$ref": "#/definitions/profile-optinout"
		}
	],
	"meta:status": "experimental"
}

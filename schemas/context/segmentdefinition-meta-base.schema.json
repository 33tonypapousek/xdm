  "$id": "https://ns.adobe.com/xdm/context/segment-meta-base",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Segments basic metadata",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:intendedToExtend": ["https://ns.adobe.com/xdm/context/segmentdefinition"],
  "description": "Common fields required for any segment definition",
  "definitions": {
    "segment-meta-base": {
      "properties": {
        "xdm:entityIdentity": {
          "title": "Segment Identity",
          "$ref": "https://ns.adobe.com/xdm/context/segmentidentity",
          "description": "Identity of the Segment"
        },
        "xdm:name": {
          "title": "Name",
          "type": "string",
          "description": "Name of the Segment"
        },
        "xdm:description": {
          "title": "Description",
          "type": "string",
          "description": "Description of the Segment"
        },
        "xdm:source": {
          "title": "Source",
          "type": "string",
          "description": "Segment Owner. For example AAM, UPS etc"
        },
        "xdm:creationTime": {
          "title": "Creation Time",
          "type": "string",
          "format": "date-time",
          "description": ""
        },
       "xdm:updateTime": {
          "title": "Update Time",
          "type": "string",
          "format": "date-time",
          "description": ""
        },
        "xdm:status": {
          "type": "string",
          "title": "Status",
          "description": "Current status of segment from external system normalized to ACTIVE/INACTIVE",
          "enum" : [
            "ACTIVE",
            "INACTIVE"
          ]
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "https://ns.adobe.com/xdm/common/extensible#/definitions/@context"
    },
    {
      "$ref": "#/definitions/segment-meta-base"
    }
  ],
  "meta:status": "experimental"
}
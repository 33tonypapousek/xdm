  "$id": "https://ns.adobe.com/experience/adcloud/advertisement",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Advertisement Details For Adcloud Search",
  "type": "object",
  "description": "Adcloud Search Advertisement Information ",
  "definitions": {
    "advertisement": {
      "properties": {
        "xdm:creativeID": {
          "title": "creative id",
          "type": "string",
          "description": "creative id"
        },
        "xdm:keywordID": {
          "title": "keyword id",
          "type": "string",
          "description": "Id of the keyword that surfer used to search that triggered the click event"
        },
        "xdm:audienceID": {
          "title": "audience id",
          "type": "string",
          "description": "Audience id"
        },
        "xdm:adGroupID": {
          "title": "adgroup id",
          "type": "string",
          "description": "adgroup id"
        },
        "xdm:campaignID": {
          "title": "campaign id",
          "type": "string",
          "description": "campaign id"
        },
        "xdm:network": {
          "title": "network",
          "type": "string",
          "description": "network information",
          "enum": ["g", "d"],
          "meta:enum": {
            "g": "Search",
            "d": "Content"
          }
        },
        "xdm:matchType": {
          "title": "matchType",
          "type": "string",
          "description": "To check the kind of match type done in keyword match",
          "enum": ["e", "b", "p"],
          "meta:enum": {
            "e": "Exact",
            "b": "Broad",
            "p": "Phrase"
          }
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/advertisement"
    }
  ],
  "meta:status": "experimental"
}

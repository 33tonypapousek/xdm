  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id":
    "https://ns.adobe.com/xdm-extensions/adobe/experience/offer-management/offer-activity",
  "type": "object",
  "title": "Activity",
  "description": "Offer Activity",
  "definitions": {
    "offer-activity": {
      "properties": {
        "@id": {
          "type": "string",
          "format": "uri",
          "title": "ID",
          "description": "The unique identifier of the activity"
        },
        "xdm:name": {
          "type": "string",
          "title": "Name",
          "description": "Activity name"
        },
        "xdm:status": {
          "type": "string",
          "title": "Status",
          "description": "Activity Status",
          "enum": ["draft", "pending", "live", "complete", "archived"],
          "meta:enum": {
            "draft": "Draft",
            "pending": "Pending",
            "live": "Live",
            "complete": "Complete",
            "archived": "Archived"
          }
        },
        "xdm:startDate": {
          "type": "string",
          "title": "Start Date",
          "description": "Activity Start Date"
        },
        "xdm:endDate": {
          "type": "string",
          "title": "End Date",
          "description": "Activity End Date"
        },
        "xdm:placement": {
          "type": "string",
          "title": "Placement",
          "description": "Placement to constraint the offers"
        }
      },
      "required": ["xdm:name", "xdm:status"]
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/offer-activity"
    }
  ]
}

  "type": "object",
  "title": "Capping Constraint",
  "description": "Offer Capping Constraint",
  "definitions": {
    "capping-constraint": {
      "type": "object",
      "properties": {
        "xdm:volume": {
          "type": "integer",
          "title": "Volume",
          "description": "Total offer volume",
          "multipleOf": 1,
          "minimum": 1
        },
        "xdm:frequency": {
          "type": "number",
          "title": "Frequency",
          "description": "Frequency per profile",
          "multipleOf": 0.1,
          "minimum": 0,
          "maximum": 100
        }
      },
      "required": ["xdm:volume", "xdm:frequency"]
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/capping-constraint"

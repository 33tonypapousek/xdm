  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://ns.adobe.com/experience/adcloud/searchadvertisingaccount",
  "title": "Search Advertising Account",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:intendedToExtend": [
    "https://ns.adobe.com/experience/adcloud/searchadvertisingattributes"
  ],
  "description": "Search Advertising Account contains common Search Advertising Attributes with custom fields specific to Account setup on the Search Advertising Platforms.",
  "definitions": {
    "searchadvertisingaccount": {
      "properties": {
        "https://ns.adobe.com/experience/adcloud/currencyCode": {
          "title": "Currency the account operates on the networks",
          "type": "string",
          "examples": [
            "USD",
            "EUR",
            "JPY"
          ],
          "pattern": "^[A-Z]{3}$",
          "description": "Currency associated with the account"
        },
        "https://ns.adobe.com/experience/adcloud/managed": {
          "title": "Indicates whether account is enabled or disabled on search networks",
          "type": "string",
          "description": "Managed Flag indicates whether account is enabled or disabled on search networks.",
          "meta:enum": {
            "Enabled": "Enabled",
            "Disabled": "Disabled"
          }
        },
        "https://ns.adobe.com/experience/adcloud/budget": {
          "title": "Budget",
          "type": "number",
          "description": "Budget Allocated to the Account"
        },
        "https://ns.adobe.com/experience/adcloud/budgetType": {
          "title": "Budget Type",
          "type": "string",
          "description": "Budget Type",
          "meta:enum": {
            "daily": "Daily",
            "monthly": "Monthly",
            "lifetime": "Lifetime",
            "daily spend until depleted": "Daily spend until depleted",
            "day of week": "Day of week"
          }
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "https://ns.adobe.com/experience/adcloud/searchadvertisingattributes"
    },
    {
      "$ref": "#/definitions/searchadvertisingaccount"
    }
  ],
  "meta:status": "experimental"
}